@model AutoYahtzee.Business.ViewModels.YahtzeeListViewModel
@{
    ViewData["Title"] = "Yahtzees";
}

<style>
    .vjs-volume-panel, .vjs-current-time, .vjs-picture-in-picture-control, .vjs-fullscreen-control {
        display: none !important;
    }

    .video-js.vjs-default-skin.vjs-paused .vjs-big-play-button {
        display: block !important;
    }

    .page-item.active a {
        border-color: black !important;
    }

    .page-item a {
        color: black;
    }

    .empty-page-item {
        padding-left: 12px;
        padding-right: 12px;
    }

    .title-row {
        margin-bottom: 30px;
    }

    .top-panel {
        background: rgb(235,235,235);
        background: linear-gradient(90deg, rgba(235,235,235,1) 0%, rgba(255,255,255,1) 50%, rgba(235,235,235,1) 100%);
    }

    .page-item a {
        color: inherit;
        text-decoration: inherit;
    }

        .page-item a:link {
            color: inherit;
            text-decoration: inherit;
        }

        .page-item a:hover {
            color: inherit;
            text-decoration: inherit;
        }

    .btn:focus, .btn:active, .page-link:focus {
        outline: none !important;
        box-shadow: none;
    }
</style>

<div class="position-relative overflow-hidden p-3 p-md-5 text-center top-panel">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">Auto Yahtzee</h1>
        <p class="lead font-weight-normal">
            The goal of the project is to roll a Yahtzee <sup data-toggle="tooltip" data-placement="top" title="A combination of an N of a kind thrown with N dices"><i class="fas fa-info"></i></sup> using automatic tools, it has no meaningful real-world application or purpose. Consider it as a form of artistic expression of the Author.
        </p>
        <a class="btn btn-outline-secondary" href="#">See Yahtzee</a>
    </div>
</div>

<div class="album py-5 bg-light">
    <div class="container">


        @foreach (var yahtzee in Model.Yahtzees)
        {

            <div class="row title-row">
                <div class="col-md-12">
                    <h3 class="font-weight-normal">
                        @yahtzee.NumberOfDices Dice Yahtzees:
                    </h3>
                </div>
            </div>

            if (yahtzee.Throws.Any())
            {

                <div class="row">

                    @foreach (var throww in yahtzee.Throws)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow">

                                <div class="card-body">
                                    <video id="my-player"
                                           class="video-js vjs-big-play-centered"
                                           controls=""
                                           preload="auto"
                                           poster="@throww.ImageUrl"
                                           data-setup='{"fluid":true}'>
                                        <source src="@throww.VideoUrl" type="video/webm" />
                                        <p class="vjs-no-js">
                                            To view this video please enable JavaScript, and consider upgrading to a
                                            web browser that
                                            <a href="https://videojs.com/html5-video-support/" target="_blank">
                                                supports HTML5 video
                                            </a>
                                        </p>
                                    </video>
                                </div>

                                <div class="card-footer">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Details</button>
                                        </div>
                                        <small class="text-muted">@throww.Date.ToString("MMM dd, yyy HH:mm")</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">
                        <p class="lead">Coming Soon</p>
                    </div>
                </div>
            }
        }
    </div>
</div>